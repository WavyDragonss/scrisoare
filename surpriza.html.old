<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>SurprizÄƒ</title>
  <style>
    body {
      background: radial-gradient(circle at 70% 30%, #ffe6f7 60%, #ffd6eb 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
      text-align: center;
      margin: 0;
      padding: 0;
      color: #d4006f;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }
    h1 {
      font-size: 2.5rem;
      margin-bottom: 20px;
      animation: pop 1s ease;
    }
    p {
      font-size: 1.4rem;
      margin-bottom: 30px;
      color: #904e6b;
    }
    .hearts {
      position: absolute;
      width: 100%;
      left: 0; top: 0;
      pointer-events: none;
      z-index: 10;
    }
    @keyframes pop {
      0% { transform: scale(0.6);}
      80% {transform: scale(1.13);}
      100% { transform: scale(1);}
    }
  </style>
</head>
<body>
  <div class="hearts" id="hearts"></div>
  <h1>Te iubesc! ðŸ’–</h1>
  <p>Ai completat totul corect!</p>
  <audio id="yay" src="https://cdn.pixabay.com/audio/2022/10/16/audio_12c8d5f6b8.mp3" autoplay></audio>
  <script>
    // Cute falling hearts animation
    function makeHeart() {
      const heart = document.createElement('div');
      heart.innerHTML = "ðŸ’–";
      heart.style.position = 'absolute';
      heart.style.left = Math.random() * 100 + 'vw';
      heart.style.top = '-40px';
      heart.style.fontSize = (Math.random() * 24 + 24) + 'px';
      heart.style.opacity = Math.random() * 0.5 + 0.5;
      heart.style.transition = 'top 2.8s linear, opacity 2.8s';
      document.getElementById('hearts').appendChild(heart);
      setTimeout(() => {
        heart.style.top = (window.innerHeight - 10) + 'px';
        heart.style.opacity = 0;
      }, 50);
      setTimeout(() => heart.remove(), 3000);
    }
    setInterval(makeHeart, 250);
  </script>
</body>
</html>